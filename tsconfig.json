{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@waldur/*": ["src/*"]
    },
    // Workaround for https://github.com/cypress-io/cypress/issues/1087
    "skipLibCheck": true,
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "./src/**/*",
    "./cypress/**/*",
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx",
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./typings.d.ts"
  ]
}
